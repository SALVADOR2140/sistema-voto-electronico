@model SistemaVoto.Modelos.ListaPolitica

@{
    ViewData["Title"] = "Detalles de la Lista";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden text-center">
                <div class="bg-dark py-4">
                    <img src="@Model.LogoUrl" class="rounded bg-white p-2" style="height: 120px;">
                </div>
                <div class="card-body p-5">
                    <h2 class="fw-bold">@Model.Nombre</h2>
                    <p class="text-muted fs-5 italic">"@Model.Eslogan"</p>
                    <hr>
                    <div class="d-flex justify-content-center gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning px-4 rounded-pill fw-bold">Editar</a>
                        <a asp-action="Index" class="btn btn-secondary px-4 rounded-pill">Volver</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>