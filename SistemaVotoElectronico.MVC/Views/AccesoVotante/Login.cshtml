@{
    ViewData["Title"] = "Ingreso a Votación";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ingreso - Votación Electrónica</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body { background: linear-gradient(135deg, #0d6efd 0%, #0dcaf0 100%); height: 100vh; display: flex; align-items: center; justify-content: center; }
        .card-token { background: white; padding: 40px; border-radius: 20px; box-shadow: 0 10px 25px rgba(0,0,0,0.2); width: 100%; max-width: 450px; }
        .form-control-lg { font-size: 24px; letter-spacing: 3px; text-align: center; text-transform: uppercase; }
    </style>
</head>
<body>

    <div class="card-token text-center">
        <div class="mb-4">
            <img src="https://cdn-icons-png.flaticon.com/512/2633/2633302.png" width="80" alt="Urna" />
        </div>
        <h2 class="mb-3 fw-bold text-primary">Ingreso al Recinto</h2>
        <p class="text-muted mb-4">Ingrese el Código Único (Token) que le entregó el presidente de mesa.</p>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <form asp-action="Ingresar" method="post">
            <div class="mb-4">
                <input type="text" name="tokenIngresado" class="form-control form-control-lg" placeholder="A1B2-C3D4" required autofocus autocomplete="off">
            </div>

            <button type="submit" class="btn btn-primary w-100 btn-lg rounded-pill shadow">
                VALIDAR E INGRESAR <i class="fa-solid fa-arrow-right"></i>
            </button>
        </form>

        <div class="mt-4">
            <a href="/" class="text-decoration-none text-muted small">Volver al inicio</a>
        </div>
    </div>

</body>
</html></html>