@model SistemaVoto.Modelos.Usuario

@{
    ViewData["Title"] = "Validación de Votantes";
    Layout = "~/Views/Shared/_LayoutJunta.cshtml";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg border-0" style="width: 100%; max-width: 500px; border-radius: 15px;">
        <div class="card-header bg-primary text-white text-center py-4" style="border-radius: 15px 15px 0 0;">
            <i class="fa-solid fa-id-card-clip fa-4x mb-3"></i> 
            <h3 class="fw-bold mb-0">Mesa de Junta</h3>
            <p class="small mb-0 opacity-75">Generación de Tokens de Votación</p>
        </div>

        <div class="card-body p-5">
            <form asp-action="GenerarToken" method="post">
                <div class="mb-4 text-center">
                    <label class="form-label fw-bold text-secondary text-uppercase small">Ingrese Número de Cédula</label>
                    <input type="text" name="cedula" class="form-control form-control-lg text-center shadow-sm"
                           placeholder="0000000000" required
                           maxlength="10"
                           oninput="this.value = this.value.replace(/[^0-9]/g, '');"
                           style="font-size: 1.8rem; font-weight: bold; border: 2px solid #e3e6f0; border-radius: 10px;">
                </div>

                <button type="submit" class="btn btn-primary btn-lg w-100 shadow fw-bold py-3">
                    <i class="fa-solid fa-gears me-2"></i> GENERAR TOKEN
                </button>
            </form>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger mt-4 text-center border-0 shadow-sm">
                    <i class="fa-solid fa-triangle-exclamation me-2"></i> @TempData["Error"]
                </div>
            }
        </div>

        <div class="card-footer bg-light text-center py-3" style="border-radius: 0 0 15px 15px;">
            <a asp-controller="Inicio" asp-action="Index" class="text-muted text-decoration-none small">
                <i class="fa-solid fa-arrow-left me-1"></i> Volver al Inicio
            </a>
        </div>
    </div>
</div>