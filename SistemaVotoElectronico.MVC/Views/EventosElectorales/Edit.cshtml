@model SistemaVoto.Modelos.EventoElectoral

@{
    ViewData["Title"] = "Editar Evento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-lg rounded-4">
                <div class="card-header bg-warning text-dark py-3">
                    <h5 class="mb-0 fw-bold"><i class="fa-solid fa-calendar-day me-2"></i>Editar Evento Electoral</h5>
                </div>
                <div class="card-body p-5">
                    <form asp-action="Edit" id="formEditarEvento">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-4">
                            <label asp-for="Nombre" class="form-label fw-bold">Nombre del Evento</label>
                            <input asp-for="Nombre" class="form-control form-control-lg" required />
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="FechaInicio" class="form-label fw-bold">Fecha Inicio</label>
                                <input asp-for="FechaInicio" class="form-control" type="datetime-local" required />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="FechaFin" class="form-label fw-bold">Fecha Fin</label>
                                <input asp-for="FechaFin" class="form-control" type="datetime-local" required />
                            </div>
                        </div>

                        <div class="form-check form-switch mb-4">
                            <input class="form-check-input" type="checkbox" asp-for="Activo" id="ActivoSwitch">
                            <label class="form-check-label fw-bold" for="ActivoSwitch">Evento Activo</label>
                        </div>

                        <div class="d-grid gap-2 mt-5">
                            <button type="button" onclick="confirmarCambios()" class="btn btn-primary btn-lg rounded-pill fw-bold shadow-sm">
                                <i class="fa-solid fa-rotate me-2"></i> Actualizar Evento
                            </button>
                            <a asp-action="Index" class="btn btn-light rounded-pill border-0">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function confirmarCambios() {
            Swal.fire({
                title: '¿Guardar cambios?',
                text: "Se actualizará la programación del evento electoral.",
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#0d6efd',
                confirmButtonText: 'Sí, actualizar',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById('formEditarEvento').submit();
                }
            });
        }
    </script>
}