@model IEnumerable<SistemaVoto.Modelos.EventoElectoral>

@{
    ViewData["Title"] = "Listado de Eventos";
}

<h1>Listado de Eventos Electorales</h1>

<div class="card mb-3">
    <div class="card-header bg-info text-white">
        Estadísticas del Sistema
    </div>
    <div class="card-body">
        <div class="row text-center">
            <div class="col-md-3">
                <h5>Total Registros</h5>
                <p class="fs-4">@ViewBag.Total</p>
            </div>
            <div class="col-md-3">
                <h5>Promedio (ID)</h5>
                <p class="fs-4">@ViewBag.Promedio</p>
            </div>
            <div class="col-md-3">
                <h5>Mínimo (ID)</h5>
                <p class="fs-4">@ViewBag.Minimo</p>
            </div>
            <div class="col-md-3">
                <h5>Máximo (ID)</h5>
                <p class="fs-4">@ViewBag.Maximo</p>
            </div>
        </div>
    </div>
</div>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo Evento</a>
</p>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>Fecha Inicio</th>
            <th>Fecha Fin</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nombre</td>
                <td>@item.FechaInicio.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@item.FechaFin.ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    @if (item.Activo)
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactivo</span>
                    }
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" })
                    @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" })
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>