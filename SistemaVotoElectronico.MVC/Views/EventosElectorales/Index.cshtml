@model IEnumerable<SistemaVoto.Modelos.EventoElectoral>

@{
    ViewData["Title"] = "Gestión de Eventos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid p-4">
    @* --- ENCABEZADO --- *@
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark">
                <i class="fa-solid fa-calendar-days me-2 text-primary"></i>Eventos Electorales
            </h2>
            <p class="text-muted">Administre los periodos y estados de los procesos de votación.</p>
        </div>
        <a asp-action="Create" class="btn btn-primary rounded-pill px-4 shadow-sm fw-bold">
            <i class="fa-solid fa-plus me-2"></i> Crear Nuevo Evento
        </a>
    </div>

    @* --- RESUMEN DE INDICADORES --- *@
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm rounded-3 p-3 border-start border-primary border-5">
                <h6 class="text-muted small fw-bold text-uppercase mb-1">Total Procesos</h6>
                <h3 class="fw-bold mb-0">@Model.Count()</h3>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm rounded-3 p-3 border-start border-success border-5">
                <h6 class="text-muted small fw-bold text-uppercase mb-1">Eventos Activos</h6>
                <h3 class="fw-bold mb-0 text-success">@Model.Count(e => e.Activo == true)</h3>
            </div>
        </div>
    </div>

    @* --- TABLA DE GESTIÓN --- *@
    <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-dark text-white">
                    <tr>
                        <th class="ps-4 py-3">Nombre del Evento</th>
                        <th class="py-3">Fecha Inicio</th>
                        <th class="py-3">Fecha Fin</th>
                        <th class="py-3 text-center">Estado</th>
                        <th class="py-3 text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <span class="fw-bold text-primary">@item.Nombre</span>
                            </td>
                            <td>
                                <i class="fa-regular fa-clock me-1 text-muted small"></i>
                                @item.FechaInicio.ToString("dd/MM/yyyy HH:mm")
                            </td>
                            <td>
                                <i class="fa-regular fa-calendar-xmark me-1 text-muted small"></i>
                                @item.FechaFin.ToString("dd/MM/yyyy HH:mm")
                            </td>
                            <td class="text-center">
                                @* Corrección para el error de item.Estado detectado en consola *@
                                @if (item.Activo == true)
                                {
                                    <span class="badge rounded-pill bg-success-subtle text-success border border-success px-3 py-2">
                                        <i class="fa-solid fa-circle-check me-1"></i> Activo
                                    </span>
                                }
                                else
                                {
                                    <span class="badge rounded-pill bg-secondary-subtle text-secondary border border-secondary px-3 py-2">
                                        <i class="fa-solid fa-circle-minus me-1"></i> Finalizado
                                    </span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="btn-group shadow-sm rounded-3 overflow-hidden">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm border-0 py-2 px-3" title="Editar">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm border-0 py-2 px-3" title="Detalles">
                                        <i class="fa-solid fa-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm border-0 py-2 px-3" title="Eliminar">
                                        <i class="fa-solid fa-trash-can"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="fa-solid fa-calendar-xmark fa-3x text-light mb-3"></i>
                <p class="text-muted">No se encontraron eventos electorales registrados.</p>
            </div>
        }
    </div> 
</div> 