@model SistemaVoto.Modelos.EventoElectoral

@{
    ViewData["Title"] = "Nuevo Evento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-lg rounded-4">
                <div class="card-header bg-primary text-white py-3 rounded-top-4">
                    <h5 class="mb-0 fw-bold">
                        <i class="fa-solid fa-calendar-plus me-2"></i>Configurar Nuevo Evento
                    </h5>
                </div>

                <div class="card-body p-5">
                    <form asp-action="Create" method="post" autocomplete="off">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        @* Nombre del Evento *@
                        <div class="mb-4">
                            <label asp-for="Nombre" class="form-label fw-bold text-muted small text-uppercase">Nombre del Evento</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="fa-solid fa-file-signature text-primary"></i>
                                </span>
                                <input asp-for="Nombre" class="form-control form-control-lg border-start-0" placeholder="Ej: Elecciones FEUE 2026" required />
                            </div>
                        </div>

                        <div class="row">
                            @* Fecha de Inicio *@
                            <div class="col-md-6 mb-4">
                                <label asp-for="FechaInicio" class="form-label fw-bold text-muted small text-uppercase">Fecha de Inicio</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0">
                                        <i class="fa-solid fa-hourglass-start text-primary"></i>
                                    </span>
                                    <input asp-for="FechaInicio" class="form-control border-start-0" type="datetime-local" required />
                                </div>
                            </div>

                            @* Fecha de Finalización *@
                            <div class="col-md-6 mb-4">
                                <label asp-for="FechaFin" class="form-label fw-bold text-muted small text-uppercase">Fecha de Fin</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0">
                                        <i class="fa-solid fa-hourglass-end text-primary"></i>
                                    </span>
                                    <input asp-for="FechaFin" class="form-control border-start-0" type="datetime-local" required />
                                </div>
                            </div>
                        </div>

                        @* --- CAMBIO AQUÍ: Usamos "Activo" en lugar de "Estado" --- *@
                        <div class="card bg-light border-0 rounded-3 mb-4">
                            <div class="card-body py-3 d-flex align-items-center justify-content-between">
                                <div>
                                    <label class="form-check-label fw-bold text-dark mb-0" for="Activo">
                                        Habilitar evento inmediatamente
                                    </label>
                                    <p class="text-muted small mb-0">El proceso de votación estará activo tras guardar.</p>
                                </div>
                                <div class="form-check form-switch form-check-reverse">
                                    @* Vinculación correcta con la propiedad Activo de tu modelo *@
                                    <input class="form-check-input h4 mb-0" type="checkbox" role="switch" asp-for="Activo" id="Activo" checked>
                                </div>
                            </div>
                        </div>

                        @* Botones de Acción *@
                        <div class="d-grid gap-2 mt-5">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill fw-bold shadow-sm py-3">
                                <i class="fa-solid fa-save me-2"></i> GUARDAR EVENTO
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill border-0 py-2 text-decoration-none text-center">
                                Cancelar y Volver
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}