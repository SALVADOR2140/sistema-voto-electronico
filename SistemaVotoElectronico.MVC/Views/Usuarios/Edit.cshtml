@model SistemaVoto.Modelos.Usuario

@{
    ViewData["Title"] = "Editar Votante";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid p-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-lg rounded-4">
                <div class="card-header bg-warning text-dark py-3 rounded-top-4">
                    <h5 class="mb-0 fw-bold"><i class="fa-solid fa-user-pen me-2"></i> Modificar Datos del Votante</h5>
                </div>
                <div class="card-body p-5">

                    @* Le agregamos un ID al form para controlarlo con JS *@
                    <form asp-action="Edit" id="formEditarVotante" autocomplete="off">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label class="form-label fw-bold text-muted">Cédula</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fa-solid fa-id-card"></i></span>
                                    <input asp-for="Cedula" class="form-control bg-light" readonly />
                                </div>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label asp-for="Correo" class="form-label fw-bold text-muted">Correo Institucional</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fa-solid fa-envelope text-primary"></i></span>
                                    <input asp-for="Correo" class="form-control" type="email" required />
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Nombres" class="form-label fw-bold text-muted">Nombres Completos</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fa-solid fa-user text-primary"></i></span>
                                <input asp-for="Nombres" class="form-control" required />
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Clave" class="form-label fw-bold text-muted">Contraseña</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fa-solid fa-key text-primary"></i></span>
                                <input asp-for="Clave" class="form-control" type="password" required />
                            </div>
                        </div>

                        <input type="hidden" asp-for="YaVoto" />
                        <input type="hidden" asp-for="TokenVotacion" />
                        <input type="hidden" asp-for="RolUsuarioId" />

                        <div class="d-grid gap-2 mt-4">
                            @* El botón ahora llama a la función de confirmación *@
                            <button type="button" onclick="confirmarActualizacion()" class="btn btn-primary btn-lg rounded-pill shadow-sm">
                                <i class="fa-solid fa-rotate me-2"></i> Actualizar Información
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">
                                Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function confirmarActualizacion() {
            Swal.fire({
                title: '¿Está seguro?',
                text: "Se actualizarán los datos del votante en el padrón electoral.",
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#0d6efd',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Sí, actualizar',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Si el usuario acepta, enviamos el formulario manualmente
                    document.getElementById('formEditarVotante').submit();
                }
            })
        }
    </script>
}