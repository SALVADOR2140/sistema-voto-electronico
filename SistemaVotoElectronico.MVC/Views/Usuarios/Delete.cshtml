@model SistemaVoto.Modelos.Usuario

@{
    ViewData["Title"] = "Eliminar Votante";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid p-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-danger text-white text-center py-4">
                    <i class="fa-solid fa-user-slash fa-4x mb-3"></i>
                    <h3 class="fw-bold mb-0">¿Eliminar Votante?</h3>
                </div>

                <div class="card-body p-5 text-center">
                    <p class="text-muted fs-5 mb-4">
                        Está a punto de eliminar permanentemente al siguiente usuario del padrón:
                    </p>

                    <div class="alert alert-light border rounded-3 p-3 mb-4">
                        <h4 class="fw-bold text-dark mb-1">@Model.Nombres</h4>
                        <p class="text-secondary mb-0">Cédula: @Model.Cedula</p>
                    </div>

                    <p class="text-danger small fw-bold">
                        <i class="fa-solid fa-triangle-exclamation me-1"></i>
                        Esta acción no se puede deshacer.
                    </p>

                    <form asp-action="Delete" id="formEliminarVotante">
                        <input type="hidden" asp-for="Id" />

                        <div class="d-grid gap-2 mt-4">
                            @* Botón que activa la confirmación de SweetAlert *@
                            <button type="button" onclick="confirmarEliminacion()" class="btn btn-danger btn-lg rounded-pill shadow-sm py-3 fw-bold">
                                <i class="fa-solid fa-trash-can me-2"></i> Confirmar Eliminación
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill border-0">
                                Cancelar y Volver
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @* Asegúrate de que la URL de la librería esté bien escrita y cerrada *@
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        function confirmarEliminacion() {
            Swal.fire({
                title: '¿Estás absolutamente seguro?',
                text: "El registro de @Model.Nombres será borrado definitivamente.",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Sí, eliminar permanentemente',
                cancelButtonText: 'No, cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById('formEliminarVotante').submit();
                }
            })
        }
    </script>
}