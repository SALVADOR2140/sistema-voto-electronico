@{
    Layout = null;
    ViewData["Title"] = "Iniciar Sesión";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema Voto</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <link rel="stylesheet" href="~/css/login.css" />

    <script>
        document.body.classList.add('login-page');
    </script>
</head>
<body class="login-page">

    <div class="d-flex justify-content-center w-100 login-container-wrapper">
        <div class="login-card text-center">

            <img src="~/imagenes/logo-utn-150-140x140.png" alt="Logo UTN" class="logo-img" />

            <h3 class="fw-bold text-secondary mb-2 text-uppercase">ELECCIONES UTN 2026</h3>
            <p class="text-muted mb-4 small">Sistema de  Voto Electronico</p>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger py-2 small shadow-sm" role="alert">
                    <i class="fa-solid fa-triangle-exclamation me-1"></i> @ViewBag.Error
                </div>
            }

            <form action="/Login/Entrar" method="post" class="text-start mt-3">

                <div class="mb-3">
                    <label class="form-label text-muted fw-bold small">USUARIO</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-user text-secondary"></i></span>
                        <input type="text" class="form-control bg-light border-start-0 ps-0" name="usuario" id="user" placeholder="Ingrese su usuario" required>
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label text-muted fw-bold small">CONTRASEÑA</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-lock text-secondary"></i></span>
                        <input type="password" class="form-control bg-light border-start-0 ps-0" name="clave" id="pass" placeholder="••••••" required>
                    </div>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary py-2 fw-bold shadow-sm rounded-pill">
                        INGRESAR
                    </button>
                </div>

            </form>

            <div class="mt-4 pt-3 border-top text-muted">
                <small>Credenciales de prueba: <b>admin / 1234</b></small> <br>
                <a href="/" class="text-decoration-none small mt-2 d-inline-block">
                    <i class="fa-solid fa-arrow-left me-1"></i> Volver al Inicio
                </a>
            </div>
        </div>
    </div>

</body>
</html>