@* Ubicación: Views/Inicio/Index.cshtml *@
@{
    ViewData["Title"] = "Bienvenido";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Voto Electrónico 2026</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/inicio.css" asp-append-version="true" />
</head>
<body>

    <div class="intro-card shadow-lg">
        <div class="icon-box">
            <i class="fa-solid fa-person-booth"></i>
        </div>

        <h1 class="fw-bold text-dark mb-3">Elecciones 2026</h1>
        <p class="text-muted mb-5">Bienvenido al sistema oficial. Pulse el botón para comenzar su proceso de votación.</p>

        @* Botón principal para el estudiante *@
        <a asp-controller="AccesoVotante" asp-action="Login" class="btn-votar shadow-sm mb-4">
            <i class="fa-solid fa-fingerprint me-2"></i> IR A VOTAR
        </a>

        @* Sección de accesos técnicos unificada *@
        <div class="mt-4 pt-3 border-top">
            <div class="d-flex justify-content-center gap-3">
                <a asp-controller="Juntas" asp-action="Index" class="btn-admin text-decoration-none">
                    <i class="fa-solid fa-person-shelter me-1"></i> Mesa de Junta
                </a>
                <span class="text-muted">|</span>
                <a asp-controller="Home" asp-action="Index" class="btn-admin text-decoration-none">
                    <i class="fa-solid fa-lock me-1"></i> Administración
                </a>
            </div>
        </div>
    </div>

</body>
</html>