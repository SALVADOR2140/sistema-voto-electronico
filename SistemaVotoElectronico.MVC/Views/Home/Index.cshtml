@{
    ViewData["Title"] = "Dashboard Admin";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold text-dark mb-0">Panel de Control</h2>
        <p class="text-muted small mb-0">Resumen general del sistema</p>
    </div>
    <span class="badge bg-primary px-3 py-2 rounded-pill shadow-sm">
        <i class="fa-solid fa-calendar me-1"></i> Periodo 2026
    </span>
</div>

<div class="row g-4 mb-5">

    <div class="col-md-3">
        <div class="stat-card" style="border-left: 5px solid #4f46e5;">
            <div>
                <h6 class="text-muted text-uppercase mb-1 small fw-bold">Eventos Activos</h6>
                <h2 class="fw-bold mb-0 text-dark">0</h2>
            </div>
            <div class="text-primary fs-1 opacity-25">
                <i class="fa-solid fa-calendar-day"></i>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="stat-card" style="border-left: 5px solid #10b981;">
            <div>
                <h6 class="text-muted text-uppercase mb-1 small fw-bold">Candidatos</h6>
                <h2 class="fw-bold mb-0 text-dark">0</h2>
            </div>
            <div class="text-success fs-1 opacity-25">
                <i class="fa-solid fa-user-tie"></i>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="stat-card" style="border-left: 5px solid #0ea5e9;">
            <div>
                <h6 class="text-muted text-uppercase mb-1 small fw-bold">Votantes</h6>
                <h2 class="fw-bold mb-0 text-dark">0</h2>
            </div>
            <div class="text-info fs-1 opacity-25">
                <i class="fa-solid fa-users"></i>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="stat-card" style="border-left: 5px solid #f59e0b;">
            <div>
                <h6 class="text-muted text-uppercase mb-1 small fw-bold">Total Votos</h6>
                <h2 class="fw-bold mb-0 text-dark">0</h2>
            </div>
            <div class="text-warning fs-1 opacity-25">
                <i class="fa-solid fa-envelope-open-text"></i>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white py-3 border-bottom-0">
                <h6 class="mb-0 fw-bold text-secondary">
                    <i class="fa-solid fa-server me-2"></i>Estado del Servidor
                </h6>
            </div>
            <div class="card-body text-center d-flex flex-column justify-content-center py-4">
                <div class="mb-3">
                    <div class="spinner-grow text-success" role="status" style="width: 3rem; height: 3rem;">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
                <h5 class="fw-bold text-success">Sistema Operativo</h5>
                <p class="text-muted small">El módulo de votación está habilitado y funcionando correctamente.</p>

                <div class="mt-3">
                    <a asp-controller="EventosElectorales" asp-action="Index" class="btn btn-outline-primary rounded-pill px-4">
                        <i class="fa-solid fa-gear me-2"></i> Configurar Elección
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100 bg-primary text-white" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
            <div class="card-body p-4 d-flex flex-column justify-content-center text-center">
                <i class="fa-solid fa-chart-pie fs-1 mb-3 opacity-50"></i>
                <h4 class="fw-bold mb-2">Reportes</h4>
                <p class="small opacity-75 mb-4">Descarga las actas y revisa el conteo de votos en tiempo real.</p>
                <button class="btn btn-light text-primary fw-bold w-100 py-2 rounded-pill shadow-sm">
                    Ver Resultados
                </button>
            </div>
        </div>
    </div>
</div>