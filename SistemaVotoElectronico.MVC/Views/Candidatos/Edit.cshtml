@model SistemaVoto.Modelos.Candidato

@{
    ViewData["Title"] = "Editar Candidato";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-lg rounded-4">
                <div class="card-header bg-warning text-dark py-3 rounded-top-4">
                    <h5 class="mb-0 fw-bold"><i class="fa-solid fa-user-pen me-2"></i>Modificar Perfil del Candidato</h5>
                </div>
                <div class="card-body p-5">

                    <form asp-action="Edit" id="formEditarCandidato" autocomplete="off">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />

                        @* 1. Nombres del Candidato *@
                        <div class="mb-4">
                            <label asp-for="Nombres" class="form-label fw-bold text-muted small text-uppercase">Nombres Completos</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fa-solid fa-user text-primary"></i></span>
                                <input asp-for="Nombres" class="form-control form-control-lg" required />
                            </div>
                            <span asp-validation-for="Nombres" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            @* 2. Cargo / Dignidad *@
                            <div class="col-md-6 mb-4">
                                <label asp-for="Cargo" class="form-label fw-bold text-muted small text-uppercase">Cargo / Dignidad</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fa-solid fa-briefcase text-primary"></i></span>
                                    <input asp-for="Cargo" class="form-control" required />
                                </div>
                                <span asp-validation-for="Cargo" class="text-danger small"></span>
                            </div>

                            @* 3. Lista Política (Relación FK) *@
                            <div class="col-md-6 mb-4">
                                <label asp-for="ListaPoliticaId" class="form-label fw-bold text-muted small text-uppercase">Lista Política</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fa-solid fa-flag text-primary"></i></span>
                                    <select asp-for="ListaPoliticaId" class="form-select" asp-items="ViewBag.ListaPoliticaId">
                                        <option value="">-- Seleccionar Lista --</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        @* 4. URLs de Foto y Plan *@
                        <div class="mb-4">
                            <label asp-for="FotoUrl" class="form-label fw-bold text-muted small text-uppercase">URL de la Foto</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fa-solid fa-image text-primary"></i></span>
                                <input asp-for="FotoUrl" class="form-control" placeholder="https://..." />
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="PlanGobiernoUrl" class="form-label fw-bold text-muted small text-uppercase">URL Plan de Gobierno (PDF)</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fa-solid fa-file-pdf text-success"></i></span>
                                <input asp-for="PlanGobiernoUrl" class="form-control" placeholder="https://..." />
                            </div>
                        </div>

                        @* Botones *@
                        <div class="d-grid gap-2 mt-5">
                            <button type="button" onclick="confirmarEdicion()" class="btn btn-primary btn-lg rounded-pill fw-bold shadow-sm">
                                <i class="fa-solid fa-rotate me-2"></i> Actualizar Información
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill border-0">
                                Cancelar y Volver
                            </a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function confirmarEdicion() {
            Swal.fire({
                title: '¿Confirmar cambios?',
                text: "Se actualizará la información pública del candidato.",
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#0d6efd',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Sí, guardar cambios',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById('formEditarCandidato').submit();
                }
            })
        }
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}