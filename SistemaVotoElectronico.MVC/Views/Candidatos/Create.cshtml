@model SistemaVoto.Modelos.Candidato

@{
    ViewData["Title"] = "Registrar Candidato";
}

<h1>Registrar Nuevo Candidato</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Nombres" class="control-label">Nombres y Apellidos</label>
                <input asp-for="Nombres" class="form-control" placeholder="Ej: Juan Pérez" />
                <span asp-validation-for="Nombres" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Cargo" class="control-label">Cargo al que postula</label>
                <select asp-for="Cargo" class="form-control">
                    <option value="Presidente">Presidente</option>
                    <option value="Vicepresidente">Vicepresidente</option>
                    <option value="Asambleista">Asambleísta</option>
                    <option value="Prefecto">Prefecto</option>
                    <option value="Alcalde">Alcalde</option>
                </select>
                <span asp-validation-for="Cargo" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="FotoUrl" class="control-label">Link de la Foto</label>
                <input asp-for="FotoUrl" class="form-control" value="https://via.placeholder.com/150" />
                <small class="text-muted">Dejamos una imagen por defecto para probar.</small>
                <span asp-validation-for="FotoUrl" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PlanGobiernoUrl" class="control-label">Link Plan de Gobierno</label>
                <input asp-for="PlanGobiernoUrl" class="form-control" value="http://www.ejemplo.com/plan.pdf" />
                <span asp-validation-for="PlanGobiernoUrl" class="text-danger"></span>
            </div>

            <div class="card bg-light mb-3">
                <div class="card-body">
                    <label asp-for="ListaPoliticaId" class="control-label fw-bold">ID de la Lista Política</label>
                    <input asp-for="ListaPoliticaId" class="form-control" type="number" />
                    <span asp-validation-for="ListaPoliticaId" class="text-danger"></span>
                    <small class="text-danger">
                        ⚠️ Debes poner el ID de una lista que YA EXISTA en la base de datos (Ej: 1).
                    </small>
                </div>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Guardar Candidato" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}