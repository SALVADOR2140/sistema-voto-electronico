@model SistemaVoto.Modelos.Candidato

@{
    ViewData["Title"] = "Registrar Candidato";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-lg rounded-4">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0 fw-bold"><i class="fa-solid fa-user-plus me-2"></i>Configurar Candidato</h5>
                </div>
                <div class="card-body p-5">
                    <form asp-action="Create" autocomplete="off">

                        <div class="mb-4">
                            <label asp-for="Nombres" class="form-label fw-bold">Nombres Completos</label>
                            <input asp-for="Nombres" class="form-control" placeholder="Ej: Juan Pérez" required />
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="Cargo" class="form-label fw-bold">Cargo / Dignidad</label>
                                <input asp-for="Cargo" class="form-control" placeholder="Ej: Rector" required />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ListaPoliticaId" class="form-label fw-bold">Asignar Lista</label>
                                <select asp-for="ListaPoliticaId" class="form-select" asp-items="ViewBag.ListaPoliticaId">
                                    <option value="">-- Seleccione una Lista --</option>
                                </select>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="FotoUrl" class="form-label fw-bold text-primary">URL de la Foto</label>
                            <input asp-for="FotoUrl" class="form-control" placeholder="https://link-de-imagen.jpg" />
                        </div>

                        <div class="mb-4">
                            <label asp-for="PlanGobiernoUrl" class="form-label fw-bold text-success">URL del Plan de Gobierno (PDF)</label>
                            <input asp-for="PlanGobiernoUrl" class="form-control" placeholder="https://link-documento.pdf" />
                        </div>

                        <div class="d-grid gap-2 mt-5">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill fw-bold shadow-sm">
                                <i class="fa-solid fa-save me-2"></i> Guardar Candidato
                            </button>
                            <a asp-action="Index" class="btn btn-light rounded-pill border-0">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>