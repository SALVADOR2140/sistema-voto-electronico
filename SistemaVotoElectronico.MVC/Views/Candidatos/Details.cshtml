@model SistemaVoto.Modelos.Candidato

@{
    ViewData["Title"] = "Ficha del Candidato";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center py-4">
    <div class="col-md-6">
        <div class="card border-0 shadow-lg rounded-4 text-center overflow-hidden">
            <div class="bg-primary py-5">
                <img src="@Model.FotoUrl" class="rounded-circle shadow border border-4 border-white" style="width: 140px; height: 140px; object-fit: cover;">
            </div>
            <div class="card-body p-5">
                <h2 class="fw-bold mb-1">@Model.Nombres</h2>
                <p class="text-primary fw-bold text-uppercase fs-5">@Model.Cargo</p>
                <hr>
                <div class="mb-4">
                    <p class="text-muted small mb-1">PERTENECE A:</p>
                    <h5 class="fw-bold">@(Model.ListaPolitica?.Nombre ?? "Independiente")</h5>
                </div>

                @if (!string.IsNullOrEmpty(Model.PlanGobiernoUrl))
                {
                    <a href="@Model.PlanGobiernoUrl" target="_blank" class="btn btn-outline-success w-100 mb-3 rounded-pill">
                        <i class="fa-solid fa-file-pdf me-2"></i> Ver Plan de Gobierno
                    </a>
                }

                <div class="d-flex justify-content-center gap-2 mt-4">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning px-4 rounded-pill fw-bold">Editar</a>
                    <a asp-action="Index" class="btn btn-secondary px-4 rounded-pill">Volver</a>
                </div>
            </div>
        </div>
    </div>
</div>