<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema Voto Electrónico</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
</head>
<body>

    <header class="topbar">
        <div class="logo-text">
            <i class="fa-solid fa-check-to-slot me-2"></i> ADMIN UTN
        </div>

        <div class="dropdown">
            <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="userMenu" data-bs-toggle="dropdown" aria-expanded="false">
                <div class="bg-white text-primary rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px;">
                    <i class="fa-solid fa-user"></i>
                </div>
                <span class="fw-bold d-none d-md-inline">
                    @if (Context.Session.GetString("UsuarioLogueado") != null)
                    {
                        @Context.Session.GetString("UsuarioLogueado")
                    }
                    else
                    {
                        <text>Invitado</text>
                    }
                </span>
            </a>
            <ul class="dropdown-menu dropdown-menu-end shadow border-0" aria-labelledby="userMenu">
                <li><h6 class="dropdown-header">Mi Cuenta</h6></li>
                <li><a class="dropdown-item" href="#">Perfil</a></li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <a class="dropdown-item text-danger" asp-controller="Login" asp-action="Salir">
                        <i class="fa-solid fa-right-from-bracket me-2"></i> Cerrar Sesión
                    </a>
                </li>
            </ul>
        </div>
    </header>

    <nav class="sidebar shadow-sm">
        <div class="py-2">

            <p class="text-uppercase text-muted small fw-bold px-4 mt-3 mb-2">Principal</p>
            <a asp-controller="Home" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")">
                <i class="fa-solid fa-gauge-high"></i> Dashboard
            </a>

            <p class="text-uppercase text-muted small fw-bold px-4 mt-4 mb-2">Administración</p>

            <a asp-controller="EventosElectorales" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "EventosElectorales" ? "active" : "")">
                <i class="fa-solid fa-calendar-check"></i> Gestionar Eventos
            </a>

            <a asp-controller="Candidatos" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Candidatos" ? "active" : "")">
                <i class="fa-solid fa-user-tie"></i> Gestionar Candidatos
            </a>

            <a asp-controller="Usuarios" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Usuarios" ? "active" : "")">
                <i class="fa-solid fa-users-gear"></i> Gestionar Votantes
            </a>

        </div>
    </nav>

    <div class="main-content">
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>